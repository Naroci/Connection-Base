<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             HorizontalAlignment="Left"
             x:Class="NetUI.Views.MessageEntryView">
    <Grid       HorizontalAlignment="Left" RowDefinitions="Auto, *">
        <Label x:Name="TimestampLabel" Margin="5,5,0,0" />
        <Border       HorizontalAlignment="Left" Background="GhostWhite" Grid.Row="1" Padding="5" Margin="5" BorderBrush="LightSteelBlue" BorderThickness="1" CornerRadius="5">
            <TextBlock x:Name="messageContent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                       Foreground="DarkSlateGray"
                       TextWrapping="Wrap" />
        </Border>
    </Grid>
</UserControl>